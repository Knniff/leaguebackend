{
  "parser": "babel-eslint",
  "env": {
    "browser": false,
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:security/recommended",
    "plugin:node/recommended",
    "plugin:mocha/recommended"
  ],
  "plugins": ["prettier", "security", "mocha"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": ["error"],
    "no-console": "off",
    "quotes": ["error", "double"],
    "indent": ["error", 2],
    "linebreak-style": ["off", "windows"]
  }
}
